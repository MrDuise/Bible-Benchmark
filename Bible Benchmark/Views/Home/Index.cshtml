



<h1>Search the Bible</h1>
<div>
    <form>
        <input type="text" name="searchText" />
        <div class="radioBtns">
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="searchChoice" id="oldTest" value="oldTest">
                    <label class="form-check-label" for="oldTest">
                        Old Testimate
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="searchChoice" id="newTest" value="newTest">
                    <label class="form-check-label" for="newTest">
                        New Testimate
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="searchChoice" id="both" value="both">
                    <label class="form-check-label" for="both">
                        Both
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Search">Search</button>
            </div>
        </div>
    </form>
</div>

